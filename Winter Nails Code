<div id="heart-animation-wrapper">
  <style>
    #heart-box {
      position: relative;
      width: 340px;
      height: 510px;
      background: url('https://successiblelife.com/wp-content/uploads/2024/12/Winter-nails-Frosty-Elegance-Nail-Art-376x500.webp') no-repeat center center;
      background-size: cover;
      border: 2px solid #ccc;
      border-radius: 10px;
      overflow: hidden;
      margin: 20px auto;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .heart {
      position: absolute;
      width: 30px;
      height: 30px;
      font-size: 30px;
      bottom: 0;
      animation: float 5s linear infinite;
      opacity: 0;
    }

    @keyframes float {
      0% {
        transform: translateY(0);
        opacity: 0;
      }
      20% {
        opacity: 1;
      }
      80% {
        opacity: 1;
      }
      100% {
        transform: translateY(-600px);
        opacity: 0;
      }
    }

    #overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.8); /* 10% more dim */
      color: white;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.2rem;
      font-weight: bold;
      text-align: center;
      cursor: pointer;
      z-index: 10;
    }
  </style>

  <div id="heart-box">
    <div id="overlay"> Click or tap to explore this fab nail look!</div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const box = document.getElementById('heart-box');
      const overlay = document.getElementById('overlay');
      let animationStarted = false;

      overlay.addEventListener('click', function () {
        overlay.style.display = 'none';
        if (!animationStarted) {
          animationStarted = true;
          startHeartAnimation();
        }
      });

      function startHeartAnimation() {
        function createHeart() {
          const heart = document.createElement('div');
          heart.className = 'heart';
          heart.textContent = '❤️';
          heart.style.left = `${Math.random() * 100}%`;
          heart.style.animationDuration = `${4 + Math.random() * 2}s`;
          box.appendChild(heart);
          setTimeout(() => {
            heart.remove();
          }, 6000);
        }

        const heartInterval = setInterval(createHeart, 800);
        box.addEventListener('DOMNodeRemoved', () => {
          clearInterval(heartInterval);
        });
      }
    });
  </script>
</div>
